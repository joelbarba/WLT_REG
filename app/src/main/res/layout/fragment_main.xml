<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="barba.joel.wlt_reg.MainActivity"
        tools:showIn="@layout/activity_main"
        android:contextClickable="false"
        android:background="#ffffff"
        android:nestedScrollingEnabled="false"
        android:touchscreenBlocksFocus="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="46,03 €"
            android:textSize="70dp"
            android:id="@+id/label_saldo"
            android:textAlignment="center"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignStart="@+id/linearLayout1"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/label_saldo"
            android:weightSum="2"
            android:id="@+id/linearLayout1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>




        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/edit_new_input"
            android:text=""
            android:textSize="50sp"
            android:textAlignment="textEnd"
            android:digits="0123456789,"
            android:selectAllOnFocus="true"
            android:layout_below="@+id/button_add"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/button_sign"
            android:layout_toEndOf="@+id/button_sign"
            android:layout_marginRight="110px"
            android:textColor="#ff0000"
            android:gravity="end" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIST"
            android:id="@+id/button_list"
            android:textSize="20dp"
            android:layout_below="@+id/label_saldo"
            android:layout_alignLeft="@+id/label_saldo"
            android:layout_alignStart="@+id/label_saldo"
            android:layout_above="@+id/edit_new_input"
            android:layout_toStartOf="@+id/button_add"
            android:layout_toLeftOf="@+id/button_add" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add"
            android:textSize="30dp"
            android:id="@+id/button_add"
            android:height="70dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/button_op1"
            android:layout_toRightOf="@+id/button_op1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="35dp"
            android:id="@+id/button_sign"
            android:height="70dp"
            android:layout_alignTop="@+id/edit_new_input" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="latte"
            android:textSize="20dp"
            android:id="@+id/button_op2"
            android:height="70dp"
            android:layout_below="@+id/edit_new_input"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:width="500px"
            android:layout_marginTop="50px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="espresso"
            android:textSize="20dp"
            android:id="@+id/button_op4"
            android:height="70dp"
            android:width="500px"
            android:layout_below="@+id/button_op2"
            android:layout_alignRight="@+id/button_op2"
            android:layout_alignEnd="@+id/button_op2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="pint"
            android:textSize="20dp"
            android:id="@+id/button_op1"
            android:height="70dp"
            android:width="500px"
            android:layout_alignTop="@+id/button_op2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button_op2"
            android:layout_toStartOf="@+id/button_op2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="bagel"
            android:textSize="20dp"
            android:id="@+id/button_op3"
            android:height="70dp"
            android:width="400px"
            android:layout_below="@+id/button_op1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button_op2"
            android:layout_toStartOf="@+id/button_op2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUSHI"
            android:textSize="20dp"
            android:id="@+id/button_op5"
            android:height="70dp"
            android:width="500px"
            android:layout_below="@+id/button_op3"
            android:layout_alignLeft="@+id/button_op3"
            android:layout_alignStart="@+id/button_op3"
            android:layout_toLeftOf="@+id/button_op6"
            android:layout_toStartOf="@+id/button_op6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CASH"
            android:textSize="20dp"
            android:id="@+id/button_op6"
            android:height="70dp"
            android:width="500px"
            android:layout_alignTop="@+id/button_op5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€"
            android:textSize="60dp"
            android:id="@+id/signText"
            android:textAlignment="center"
            android:layout_alignTop="@+id/edit_new_input"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ff0000"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/button_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@id/button_op6"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="30dp"
            android:height="70dp"
            android:text="LIST"
            android:textSize="24sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>